%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Page Style %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Margins %
\geometry{
  top=1in,            % <-- you want to adjust this
  inner=1in,
  outer=1in,
  bottom=1in,
  headheight=3ex,       % <-- and this
  headsep=5ex,          % <-- and this
}

% Title %
\renewcommand{\maketitle}{
    \setcounter{page}{0} % Restarts page countering
    \thispagestyle{plain} % Set no head/foot for the first page
    \renewcommand{\thefootnote}{\fnsymbol{footnote}} % Set footnote to symbols
    \noindent\large\textsc{\journal \hfill \@date} \\[0.5in] \Large\textbf{ Referee Report: \@title \\[0.1in] by \paperauthors \hfill{}} \\[0.5in] 
    \large\textsc{Referee: \referee}\footnote[2]{\address \\ email: \email} \\[0.5in]
    \normalsize
    \renewcommand{\thefootnote}{\arabic{footnote}} % Return to normal footnotes
    }

% Footnotes %
\setlength{\footnotemargin}{1em}
\setlength{\skip\footins}{1em}

% Font %
\renewcommand\familydefault{\sfdefault} % Sans erif by default

% Page Style %
\fancyhf{}  
\pagestyle{fancy}
\lhead{\small\textit{\journal}}
\rhead{\small\textit{Referee Report}}
\cfoot{\thepage}
\makeatother

% First page style only
\fancypagestyle{plain}{
  \fancyhf{}
  \pagenumbering{roman} % Page numbering
  \renewcommand{\headrulewidth}{0pt}
  \cfoot{\thepage}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Section Format %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\makeatletter
\renewcommand\@seccntformat[1]{}	% SET SECTION SYMBOL
\sectionfont{\centering\large}			    % SET SECTION FONT
\setlength{\parindent}{24pt}		% SETUP INDENTATION
\makeatother

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% PDF Metadata %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\makeatletter
\AtBeginDocument{
  \hypersetup{
    pdftitle = {\@title},
    pdfauthor = {\@author},
    pdfkeywords={Referee Report, \journal, \paperauthors}
  }
}
\makeatother

